rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /pets/{petId} {
      allow read;                                      // p√∫blico
      allow write: if request.auth.uid == resource.data.ownerId;
      match /{subCol=**}/{doc} {
        allow read: if request.auth != null;           // solo logeados
        allow write: if request.auth.uid == resource.data.ownerId;
      }
    }
  }
}
